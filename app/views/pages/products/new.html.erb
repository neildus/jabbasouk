<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new product</h3>
        <%= simple_form_for @products do |f| %>
          <%= f.input :title, placeholder: 'Insert your product title here' %>
          <%= f.input :description, placeholder: 'What is your product about' %>
          <%= f.input :Price %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
