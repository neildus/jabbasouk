 <div class="main-container">
 <div class="row">
        <div class="col">
            <div class="container py-4 py-xl-5">
                <div class="row gy-4 gy-md-0">
                    <div class="col-md-6 d-md-flex align-items-md-center">

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-top: 50px; margin-bottom: 100px;">
        <div class="row">
            <div class="col-md-6" style="margin: auto;display: flex;padding-left: 80px;margin-right: -50px;">
            <img src='<%= @product.photo %>' style='width: 400px; height: 100%; display: flex; border-radius: 20px;'>
            </div>
            <div class="col-md-6" style="padding-right: 130px;"><i class="far fa-star"></i><br>
                <%= link_to "< Back to all products", products_path, class: "linkover" %>
                <br>

                <h1><%= @product.title %></h1>
                <p><%= @product.description %></p>
				<h5> <div class="price" style="display: inline;">*</div> <%= @product.price %></h5>

                <br><br>
                <% if user_signed_in? %>
                <%= simple_form_for Booking.create do |f| %>
                <%= f.hidden_field :product_id, value: @product.id %>
                <%= f.submit "Order Now", class: "button" %>
                <% end %>
                <% else %>
                <%= button_to "Sign In to Order", "/users/sign_in", method: "get", class: "button" %>
                <% end %>
            </div>
        </div>
     </div>
     <hr style="width: 1200px; margin: 0 auto; height: 5px;">

<br><br><br>

